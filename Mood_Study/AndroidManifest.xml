        <activity android:name="LoginActivity" android:screenOrientation="portrait" android:configChanges="keyboard|keyboardHidden|orientation" android:noHistory="true"></activity>
        <activity android:name="RegistrationActivity" android:screenOrientation="portrait" android:configChanges="keyboard|keyboardHidden|orientation" android:noHistory="true"></activity>
